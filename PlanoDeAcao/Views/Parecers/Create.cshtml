@model PlanoDeAcao.Models.ViewModels.VisitaFormViewModel
@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Parecer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Parecer.Descricao" class="control-label"></label>
                <input asp-for="Parecer.Descricao" class="form-control" />
                <span asp-validation-for="Parecer.Descricao" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Parecer.VisitaId" class="control-label"></label>
                <select asp-for="Parecer.VisitaId" asp-items="@(new SelectList(Model.Visitas,"Id",
                "Id"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

